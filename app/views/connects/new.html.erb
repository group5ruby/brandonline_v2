<%= filepicker_js_include_tag %>
<h1>Your review</h1>
<div class="ui one column grid">
	<div class="column six wide form-holder col1">
		<%= form_for (@connect), url:user_connects_path do |f| %>
		<div class="ui form">
			<div class="field">
				<%= f.label :title %>
				<%= f.text_field :title %>
			</div>
			<div class="field inline">
			<%= f.hidden_field :user_id, :value => current_user.id %>
				<label>Upload image</label>
				<%= f.filepicker_field :image_url %>
			</div>
			<div class="field">
				<label>Type page you share</label>
				<div class="ui selection dropdown">
					<input type="hidden" name="connect[type_web]">
					<i class="dropdown icon"></i>
					<div class="default text">Type web</div>
					<div class="menu">
						<div class="item" data-value="1">Facebook</div>
						<div class="item" data-value="2">Amazon</div>
						<div class="item" data-value="3">Linkiend</div>
						<div class="item" data-value="4">Other website</div>
					</div>
				</div>
			</div>
			<div class="field">
				<label>Link page has what your share(image, link, article ..)</label>
				<%= f.text_field :link %>
			</div>
		
        <%= f.submit "Create", class:"ui blue button" %>
      <% end %>      
		</div>
	</div>