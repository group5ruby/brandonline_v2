<div class="ui one column grid">
	<div class="column six wide form-holder col1">

		<%= form_for(@user) do |f| %>	
		<div class="ui form">
			<div class="field">
				<%= f.label :business %>
				<%= f.text_field :business, class:"text" %>
			</div>
			<div class="field">
				<%= f.label :identity_number %>
				<%= f.text_field :identity_number, class:"text" %>
			</div>
			<div class="field">
				<%= f.label :work_place%>
				<%= f.text_field :work_place , class:"text" %>
			</div>			
				<%= f.submit "Next ", class:"ui green button" %>			
			<% end %>
			<%= link_to "Not now", user_path(id: current_user.id), class:"ui button" %>
		</div>
	</div>
</div>