<%= filepicker_js_include_tag %>
<div class="ui grid cards">

	<div class="ten wide column">
		<div class="ui fluid card">
			<div class="content header">
				<div class="ui header">
					<center> <i class="user icon"></i><%= current_user.user_name %> Profile </center>
				</div>
			</div>

			<div class="ui grid">

				<div class="five wide column" style="padding-top: 24px; padding-left: 24px;">
					<div class="card">
						<div class="image" >
							<img src="<%= avatar(@user.filepicker_url)%>" style="width:170px;height:130px;">
						</div>
						<div class="extra">

						</div>
					</div>
				</div>

				<div class="eleven wide column">
					<ul>
						<li><b>Full name:</b> <%= current_user.user_name %>
							<i class="<%= User.is_verified(current_user.identity_number) %>"> </i></li>
							<li><b>Email:</b> <%= current_user.email %>
								<i class="<%= User.is_verified(current_user.is_verified) %>"> </i></li>
								<li>Phone: <b><%= current_user.phone_number %></b></li>
								<li>Address: <b><%= current_user.address %></b></li>
								<li>Zalo: <b><%= current_user.zalo %></b></li>
								<li>Career:<b><%= current_user.career %></b></li>
								<li>Indentify_Number:<b><%= current_user.identity_number %></b></li>
								<li></li>
								<li></li>

							</ul>
						</div>
					</div>


					<div class="extra content">
						<a class="right floated edituser">
							<i class="edit icon"></i>
							Edit
						</a>
						<span>
							<i>Started since  <%= current_user.created_at.month %>/<%= current_user.created_at.year  %></i>
						</span>
					</div>

				</div>

				<div class="ui fluid card">
					<div class="container p3">
						<br>
						<h4 class="ui sub header">
							<i class="university icon"></i>
							Bank account 
						</h4>
						<div class="content">
							XXXXXXXX
						</div>						
						<h4 class="ui sub header">
							<i class="university icon"></i>
							Bank account 
						</h4>
						<div class="content">
							XXXXXXXX
						</div>
						<br>
					</div>
					<div class="extra content">
						<a class="right floated editbank">
							<i class="edit bank icon"></i>
							Edit
						</a>
					</div>
				</div>
			</div>

			<div class="five wide column p2">
				<div class="ui fluid card">
					<ul><h4>Your verify status: <font color="red"><%= @is_verified  %></font></h4></ul>
					<ul><h4>Your account status: <font color="green"> <%= @account_status.status  %> </font>
					</ul>
					<ul><h4>Positive Feedback: </h4></ul>
					<ul><h4>Negative Feedback: </h4></ul>

				</div>
				<div class="ui fluid card-3">
					<div class="content p3">
						<div class="ui header">Feedback</div>
						<% @feedbacks.each do |feed| %>
						<li><%= feed.guest.user_name %> : <%= feed.content %></li>							
						<% end %>
					</div>
				</div>
			</div>	
		</div>


		<!--  Modal Javascript -->

		<div class="ui modal edituser">
			<i class="close icon"></i>
			<div class="header">
				Edit User
			</div>
			<div class="image content">
				<div class="ui medium image">
					<img src="<%= avatar(@user.filepicker_url)%>" style="width:170px;height:130px;">
				</div>
				<div class="description">
					<div class="ui header">This is edit user information form. find this in "Show.html.erb"</div>
					<p>We've grabbed the following image from the <a href="https://www.gravatar.com" target="_blank">gravatar</a> image associated with your registered e-mail address.</p>
					<p>Is it okay to use this photo?</p>
				</div>
				<center>
					<%= form_for @user do |f| %>
					<div>
						<%= f.label :filepicker_url, "Upload Your Avatar" %>
						<%= f.filepicker_field :filepicker_url %>
					</div>
					<!--<%= f.submit %> -->
					<% end %>
				</center>
				<br>
				<%= form_for @user do |f| %>
				<div>
					<%= f.label :filepicker_url, "Upload Your Certificate Images" %>
					<%= f.filepicker_field :filepicker_url %>
				</div>
				<!--<%= f.submit %> -->
				<% end %>

			</div>
			<div class="actions">
				<div class="ui black deny button">
					Cancle
				</div>
				<div class="ui positive right labeled icon button">
					Update 
					<i class="checkmark icon"></i>
				</div>
			</div>
		</div>

		<div class="ui modal editbank">
			<i class="close icon"></i>
			<div class="header">
				Edit bank
			</div>
			<div class="image content">
				<div class="ui medium image">
					<img src="/images/avatar/large/chris.jpg">
				</div>
				<div class="description">
					<div class="ui header">This is edit bank information form. find this in "Show.html.erb"</div>
					<p>We've grabbed the following image from the <a href="https://www.gravatar.com" target="_blank">gravatar</a> image associated with your registered e-mail address.</p>
					<p>Is it okay to use this photo?</p>
				</div>
			</div>
			<div class="actions">
				<div class="ui black deny button">
					Cancle
				</div>
				<div class="ui positive right labeled icon button">
					Update 
					<i class="checkmark icon"></i>
				</div>
			</div>
		</div>